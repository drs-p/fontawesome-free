\NeedsTeXFormat{LaTeX2e}
\def\fontawesome@free@date{2024-12-14}
\def\fontawesome@free@version{1.1.3}
\ProvidesPackage{fontawesome-free}[\fontawesome@free@date \space v\fontawesome@free@version \space LuaLaTeX support for Font Awesome]

\RequirePackage{iftex}
\RequireLuaTeX

\directlua{fa = require("fontawesome-free.lua")}

\NewDocumentCommand{\fa}{s m}{%
    \IfBooleanTF{#1}%
        {\makebox[1.25em][c]{\directlua{fa.print_icon("#2")}}}%
        {\directlua{fa.print_icon("#2")}}%
}

\endinput
